# Allow access from Cloudflare tunnel domain
DANGEROUSLY_DISABLE_HOST_CHECK=true

# API Backend Address
# Use https://api.lpzb.me when accessing via ssu.lpzb.me (Cloudflare tunnel)
# Use http://192.168.68.6:5000 when accessing via local IP (192.168.68.6:3000)
# Use http://localhost:5000 when testing locally
REACT_APP_API_ADDRESS=https://api.lpzb.me

# For local development, comment the above and uncomment below:
# REACT_APP_API_ADDRESS=http://localhost:5000

# Disable WebSocket hot-reload for HTTPS access (prevents WSS errors)
# Hot reload doesn't work well with Cloudflare tunnel anyway
WDS_SOCKET_HOST=0.0.0.0.invalid
